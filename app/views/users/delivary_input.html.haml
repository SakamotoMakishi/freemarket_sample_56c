.mercari_sign_up_container4
  .header
    .header__logo
      = link_to "/" do
        %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3791839826"}/
    .header__progress
      %ul.header__progress__bars
        %li.header__progress__bars__text1
          会員情報
        %li.header__progress__bars__text2
          電話番号認証
        %li.header__progress__bars__text3
          お届け先住所入力
        %li.header__progress__bars__text4
          支払い方法
        %li.header__progress__bars__text5
          完了
      %ul.header__progress__bar
        %li.header__progress__bar__point1
          ●
        %li.header__progress__bar__point2
          ●
        %li.header__progress__bar__point3
          ●
        %li.header__progress__bar__point4
          ●
        %li.header__progress__bar__point5
          ●
      %ul.header__progress__line
        %li.header__progress__line__red-bar
  .main
    .main__section
      .main__section__top
        住所入力
    .main__conect
      .main__conect__lists
        %ul.main__conect__lists__list
          = form_with url: root_path do |f|
            %li.main__conect__lists__list__text
              お名前
            %li.main__conect__lists__list__required
              必須
            %li.main__conect__lists__list__text_erea
              = f.text_field :first_name, placeholder:'例）山田',class: "text_field"
            %li.main__conect__lists__list__text_erea
              = f.text_field :last_name, placeholder:'例）彩',class: "text_field"
            %li.main__conect__lists__list__text
              お名前カナ
            %li.main__conect__lists__list__required
              必須
            %li.main__conect__lists__list__text_erea
              = f.text_field :first_name_kana, placeholder:'例）ヤマダ',class: "text_field"
            %li.main__conect__lists__list__text_erea
              = f.text_field :last_name_kana, placeholder:'例）アヤ',class: "text_field"
            %li.main__conect__lists__list__text
              郵便番号
            %li.main__conect__lists__list__required
              必須
            %li.main__conect__lists__list__text_erea
              = f.text_field :postal_code, placeholder:'例) 123-4567',class: "text_field"
            %li.main__conect__lists__list__text
              都道府県
            %li.main__conect__lists__list__required
              必須
            %li.main__conect__lists__list__text_erea
              = f.text_field :prefectures, placeholder:'例) 123-4567',class: "text_field"
            %li.main__conect__lists__list__text
              市区町村
            %li.main__conect__lists__list__required
              必須
            %li.main__conect__lists__list__text_erea
              = f.text_field :city, placeholder:'例) 横浜市緑区',class: "text_field"
            %li.main__conect__lists__list__text
              番地
            %li.main__conect__lists__list__required
              必須
            %li.main__conect__lists__list__text_erea
              = f.text_field :address, placeholder:'例) 番地-1-1-1',class: "text_field"
            %li.main__conect__lists__list__text
              建物名
            %li.main__conect__lists__list__any
              任意
            %li.main__conect__lists__list__text_erea
              = f.text_field :building_name, placeholder:'例) 難波skyo',class: "text_field"
            %li.main__conect__lists__list__text
              電話番号
            %li.main__conect__lists__list__any
              任意
            %li.main__conect__lists__list__text_erea
              = f.text_field :phone, placeholder:'例) 090-1234-5678',class: "text_field"
            %li.main__conect__lists__list__btn
              = f.button '次へ進む',class: "submit_btn"
  .footer
    %ul.footer__nav
      %li
        = link_to 'プライバシーポリシー'
      %li
        = link_to 'メルカリ利用規約'
      %li
        = link_to '特定商取引に関する規約'
    .footer__logo
      = link_to '/' do
        .footer__logo__image
          %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3791839826"}/
      %p.footer__logo__text
        © 2019 Mercari