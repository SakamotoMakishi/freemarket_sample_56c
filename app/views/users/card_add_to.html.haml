= render 'layouts/header'
- breadcrumb :card
= render "layouts/breadcrumbs"
.mypage
  .mypage__nav
    = render 'layouts/mypage-sidebar'
    .mypage__nav__main-contents
      .card_page_menu
        .card_add_to
          .card_add_to__form-top
            支払い方法
          .main
            .main__conect
              .main__conect__lists
                %ul.main__conect__lists
                  %li.main__conect__lists__text
                    クレジットカード一覧
                -if current_user.card.blank?
                  %li.main__conect__lists__link
                    = link_to user_card_users_path(current_user) ,class: 'card_link' do
                      .main__conect__lists__link__text
                        クレジットカードを追加する
                      %i.far.fa-credit-card
                  %li.main__conect__lists__border
                  %li.main__conect__lists__message
                    = link_to '支払い方法について','/',class: 'message'
                - else
                  %form.l-single-content
                    %figure
                      = image_tag  "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?550906487", width: "49", alt: "visa", height: "15"
                    .settings-payment-num ************4242
                    .settings-payment-num 12 / 20
                    %button.settings-payment-remove{type: "submit"}
                      削除する
                  %li.main__conect__lists__border
                  %li.main__conect__lists__message
                    = link_to '支払い方法について','/',class: 'message'

= render "layouts/banner"
= render "layouts/footer"
