=render 'layouts/header'
- breadcrumb :mypage
= render "layouts/breadcrumbs"
.mypage
  .mypage__nav
    = render 'layouts/mypage-sidebar'
    .mypage__nav__main-contents
      .mypage__nav__main-contents__mypage-identification
        %h2.mypage__nav__main-contents__mypage-identification__head いいね！一覧
      %ul.like-lists
        - @item.each do |item|
          %li#lis
            .like-lists__list
              = link_to item_path(item), class: "like-lists__list__link" do
                .like-lists__list__link__img
                  = image_tag url_for(item.images.first)
                  - if item.buyer_id.presence
                    .sold
                      %p SOLD
                .like-lists__list__link__body
                  .like-lists__list__link__body__text
                    = item.name
                    .like-lists__list__link__body__text__price
                      = "¥#{item.price}"
                %i.fa.fa-chevron-right.like-lists__list__link__body__fa
= render "layouts/banner"
= render "layouts/footer"
= render 'layouts/post-btn'
