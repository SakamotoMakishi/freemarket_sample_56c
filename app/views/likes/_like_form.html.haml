
- if current_user.likes.find_by(item_id: @item.id)
  = link_to unlike_path(@item.id), method: :delete, remote: true, class: "item-details__buttons__left__like", id: "like-link-#{@item.id}"  do
    
    %i.fas.fa-heart.heart-like
    %p いいね!
    %P.up
      = "#{@item.likes.count}"
- else
  = link_to like_path(@item.id), method: :post, remote: true, class: "item-details__buttons__left__unlike", id: "like-link-#{@item.id}"  do
    %i.fas.fa-heart.heart-unlike
    %P いいね!
    %p.down
      = "#{@item.likes.count}"