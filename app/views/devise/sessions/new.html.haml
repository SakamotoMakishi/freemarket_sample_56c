.mercari_login_container
  = render 'layouts/header-logo'
  .main
    .main__section
      .main__section__top
        アカウントお持ちでない方はこちら
      %ul.main__conect__lists
        %li.main__conect__lists__mail
          = link_to 'user_input' do
            .main__conect__lists__mail__btn
              新規会員登録
    .main__conect
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        %ul.main__conect__lists
          %li.main__conect__lists__facebook
            = link_to '/' do
              .main__conect__lists__facebook__btn
                Facebookでログイン
              %i.fab.fa-facebook-square
          %li.main__conect__lists__google
            = link_to '/' do
              .main__conect__lists__google__btn
                Googleでログイン
              .main__conect__lists__google__icon
          %li.main__conect__lists__input
            = f.email_field :email, autocomplete: "email", class:'input_box1',placeholder:'メールアドレス'
          %li.main__conect__lists__input
            = f.password_field :password, autocomplete: "new-password", class:'input_box2',placeholder:'パスワード'
          %li.main__conect__lists
            .main__conect__lists__reCAPTCHA
          .actions
            .actions__btn
              = f.submit 'ログイン', class: "submit_btn"
            .actions__link
              = link_to "パスワードお忘れの方",'signup_page',class:'next_link'
  = render 'layouts/footer-registrations'