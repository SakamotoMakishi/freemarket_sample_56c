.mercari_sign_up_container
  = render 'layouts/header-logo'
  .main
    .main__section
      .main__section__top
        購入内容の確認
    .main__buy-content
      .main__buy-content__inner
        %h3.main__buy-content__inner__buy-item-image
          = image_tag (@item.images.first)
        %p.main__buy-content__inner__buy-item-name.bold
          = "#{@item.name}"
        .main__buy-content__inner__buy-form
          = form_with url: pay_card_path, method: :post, local: true do |f|
            %p.main__buy-content__inner__buy-form__buy-price.bold
              = "¥ #{@item.price}"
              %span.main__buy-content__inner__buy-form__buy-price__item-shipping-fee 送料込み
            %ul.main__buy-content__inner__buy-form__point
              %li.main__buy-content__inner__buy-form__point__accordion-parent
                .main__buy-content__inner__buy-form__point__accordion-parent__accordion-toggle
                  ポイントはありません
            %ul.main__buy-content__inner__buy-form__buy-price-table
              %li.main__buy-content__inner__buy-form__buy-price-table__buy-price-row.bold
                .main__buy-content__inner__buy-form__buy-price-table__buy-price-row__left-cell 支払い金額
                .main__buy-content__inner__buy-form__buy-price-table__buy-price-row__right-cell
                  = "¥ #{@item.price}"
            = f.submit "購入する", class: "main__buy-content__inner__buy-form__btn"
      .main__buy-content__buy-content
        .main__buy-content__buy-content__user-inner
          %h3 配送先
          %address.main__buy-content__buy-content__user-inner__buy-user-text
            〒111-1111
            %br/
            大阪府 大阪市西区
            新町1-1-1
            hogehogeマンション101
            %br/
            = current_user.nickname
          %p.main__buy-content__buy-content__user-inner__buy-user-text
          = link_to'/', class: 'main__buy-content__buy-content__user-inner__buy-user-fix' do
            %span 変更する
            %i.fa.fa-chevron-right
      %section.main__buy-content__buy-content{"data-buy" => "pay-method"}
        .main__buy-content__buy-content__buy-inner
          %h3 支払い方法
          %p.main__buy-content__buy-content__buy-inner__buy-user-card-text
            ************1111
            %br/
            04 / 22
          %figure
            = image_tag 'http://logo-sozai.com/data/img/h0002.png'
            
          %p
          = link_to'/', class: 'main__buy-content__buy-content__buy-inner__buy-user-fix' do
            %span 変更する
            %i.fa.fa-chevron-right
  = render 'layouts/footer-registrations'

