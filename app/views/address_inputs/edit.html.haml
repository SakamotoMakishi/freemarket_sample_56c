=render 'layouts/header'
- breadcrumb :identification
= render "layouts/breadcrumbs"
.mypage
  .mypage__nav
    = render 'layouts/mypage-sidebar'
    .mypage__nav__main-contents
      .mypage__nav__main-contents__mypage-identification
        %h2.mypage__nav__main-contents__mypage-identification__head 本人情報の登録
        .mypage__nav__main-contents__mypage-identification__form
          = form_with model: @address_inputs, local: true, url: address_input_path(current_user), method: :patch do |form|
            = form.hidden_field :id ,value: "#{current_user.address_input.id}"
            .mypage__nav__main-contents__mypage-identification__form__texts
              %p
                お客さまの本人情報をご登録ください。
                %br
                登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
              %p.mypage__nav__main-contents__mypage-identification__form__texts__text-right
                = link_to "/" do
                  本人確認書類のアップロードについて
                  %i.fa.fa-angle-right
            .mypage__nav__main-contents__mypage-identification__form__group
              %label お名前
              %p 
                = "#{current_user.address_input.first_name} #{current_user.address_input.last_name}"
            .mypage__nav__main-contents__mypage-identification__form__group
              %label お名前カナ
              %p 
                = "#{current_user.address_input.first_name_kana} #{current_user.address_input.last_name_kana}"
            .mypage__nav__main-contents__mypage-identification__form__group
              %label{for: "birthday"} 生年月日
              %p 2019/08/01
            .mypage__nav__main-contents__mypage-identification__form__group
              = form.label :"郵便番号"
              %span.mypage__nav__main-contents__mypage-identification__form__group__form-arbitrary 任意
              %br
                = form.text_field :postal_code, name: "postal_code", placeholder: "例）1234567", class: "mypage__nav__main-contents__mypage-identification__form__group__box"  
            .mypage__nav__main-contents__mypage-identification__form__group
              %label{for: "prefecture"} 都道府県
              %span.mypage__nav__main-contents__mypage-identification__form__group__form-arbitrary 任意
              .mypage__nav__main-contents__mypage-identification__form__group__select
                
                = form.select :prefectures,[["北海道", "北海道"], ["中国", "中国"],["インド", "インド"],["埼玉", "埼玉"],["ブラジル", "ブラジル"]]
                %i.fa.fa-angle-down.fa-2x
            .mypage__nav__main-contents__mypage-identification__form__group
              = form.label :"市区町村"
              %span.mypage__nav__main-contents__mypage-identification__form__group__form-arbitrary 任意
              %br
                = form.text_field :city, name: "city", placeholder: "例) 横浜市緑区", class: "mypage__nav__main-contents__mypage-identification__form__group__box"  
            .mypage__nav__main-contents__mypage-identification__form__group
              = form.label :"番地"
              %span.mypage__nav__main-contents__mypage-identification__form__group__form-arbitrary 任意
              %br
                = form.text_field :address, name: "address", placeholder: "例) 例) 青山1−1−1", class: "mypage__nav__main-contents__mypage-identification__form__group__box"  
            .mypage__nav__main-contents__mypage-identification__form__group
              = form.label :"建物名"
              %span.mypage__nav__main-contents__mypage-identification__form__group__form-arbitrary 任意
              %br
                = form.text_field :building_name, name: "building_name", placeholder: "例) 例) 柳ビル103", class: "mypage__nav__main-contents__mypage-identification__form__group__box"   
            = form.submit "登録する", class: "mypage__nav__main-contents__mypage-identification__form__btn-red"
            .mypage__nav__main-contents__mypage-identification__form__right-group
              = link_to '/' do
                本人情報の登録について
                %i.fa.fa-angle-right
= render "layouts/banner"
= render "layouts/footer"

